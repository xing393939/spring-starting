        http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.3.xsd"
    default-lazy-init="true">

    <context:property-placeholder location="classpath*:config/database.properties" />

    <import resource="spring/spring-mybatis.xml" />
    <import resource="spring/spring-redis.xml" />

    <bean id="MyTestServiceImpl" class="com.yihaomen.web.hello.MyTestServiceImpl"></bean>
    <task:scheduler id="myScheduler"/>
    <task:scheduled-tasks scheduler="myScheduler">
        <task:scheduled ref="MyTestServiceImpl" method="myTest3" cron="0/5 * * * * *"/>
    </task:scheduled-tasks>
	
</beans>